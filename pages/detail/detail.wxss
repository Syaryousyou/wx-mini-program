/* pages/detail/detail.wxss */
.detailContainer{
  display: flex;
  flex-direction: column;
}
.bigImg{
  width: 100%;
  height: 400rpx;
}
.musicImg{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  left: 50%;
  top: 170rpx;
  margin-left: -45rpx;
}
.avatar_date{
  padding: 20rpx;
}
.avatar_date > image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.avatar_date > text{
  font-size: 28rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.title{
  font-size: 34rpx;
  font-weight: 700;
  margin-left: 20rpx;
}
.collection_share{
  float: right;
}
.collection_share image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 30rpx;
}
.collection_share_container{
  position: relative;
}
.line{
  height: 1px;
  background: #eee;
  width: 90%;
  position: absolute;
  left: 5%;
  top: 45rpx;
  z-index: -1;
}
button{
  width: 300rpx;
  height: 80rpx;
}
.content{
  font-size: 34rpx;
  color: #666;
  line-height: 50rpx;
  text-indent: 34rpx;
}