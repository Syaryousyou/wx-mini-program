/* pages/movies/movies.wxss */
.moviesContainer{
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.moviesContainer image{
  width: 128rpx;
  height: 128rpx;
}
.content{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  width: 70%;
}
.movie_name{
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie_year{
  font-size: 28rpx;
  color: #666;
  margin: 6rpx 0;
}
.movie_director{
  font-size: 30rpx;
  color: #333;
}
.movie_rating{
  font-size: 36rpx;
  font-weight: 700;
  color: red;
}