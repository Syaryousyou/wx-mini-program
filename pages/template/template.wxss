/* pages/template/template.wxss */
.tempContainer{
  display: flex;
  flex-direction: column;
  margin: 10rpx 0;
  padding: 10rpx 0;
  border-bottom: 1px solid #efefef;
  border-top: 1px solid #efefef;
}
.avatar_date{
  padding: 20rpx 0 20rpx 20rpx;
}
.avatar_date > image{
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.avatar_date > text{
  font-size: 32rpx;
  vertical-align: middle;
}
.company{
  font-size: 36rpx;
  font-weight: 700;
  margin-left:20rpx;
}
.bigImg {
  width: 100%;
  height: 400rpx;
  margin: 20rpx 0;
}
.content{
  font-size: 34rpx;
  color: #666;
  text-indent: 34rpx;
  line-height: 50rpx;
}
.attention > image {
  width: 32rpx;
  height: 32rpx;
  margin: 0 10rpx;
  vertical-align: middle;
}
.attention > text {
  font-size: 26rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
