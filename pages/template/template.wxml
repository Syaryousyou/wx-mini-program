<!--pages/template/template.wxml-->
<template name="listTemp">
  <view class="tempContainer">
    <view class="avatar_date">
      <image src="{{avatar}}"/>
      <text>{{date}}</text>
    </view>
    <text class="company">{{title}}</text>
    <image class="bigImg" src="{{headImgSrc}}"/>
    <text class="content">{{detail_content}}</text>
    <view class="attention">
      <image src="{{detail_love_image1}}"/>
      <text>{{love_count}}</text>
      <image src="{{detail_love_image2}}"/>
      <text>{{attention_count}}</text>
    </view>
  </view>
</template>